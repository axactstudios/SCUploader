<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity"
    android:background="#08415C">

    <Button
        android:id="@+id/choose_file"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/cutom_button"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:text="Choose file"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="537dp"></Button>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/chosen_file_name"
    android:hint="Chosen file name will be displayed here"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"></TextView>


    <Button
        android:id="@+id/upload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/cutom_button"
        android:fontFamily="@font/montserrat"
        android:padding="5dp"
        android:text="upload"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="537dp"></Button>

</RelativeLayout>